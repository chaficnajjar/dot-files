#!/bin/bash
# Found here: https://wiki.archlinux.org/index.php/Feh

shopt -s nullglob
cd ~/projects/wallpapers

while true; do
    files=()
    for i in *.jpg *.png; do
        [[ -f $i ]] && files+=("$i")
    done
    range=${#files[@]}

    ((range)) && feh --bg-scale "${files[RANDOM % range]}"

    sleep 15m
done
