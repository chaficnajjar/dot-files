# Increase volume by 5%.
"amixer set Master 5%+ && killall -SIGUSR1 i3status"
    XF86AudioRaiseVolume

# Decrease volume by 5%.
"amixer set Master 5%- && killall -SIGUSR1 i3status"
    XF86AudioLowerVolume

# Toggle speaker.
"amixer -D pulse set Master 1+ toggle && killall -SIGUSR1 i3status"
    XF86AudioMute

# Next track.
"cmus-remote -n"
    Mod2+Mod4 + b

# Previous track.
"cmus-remote -r"
    Mod2+Mod4 + z

# Play/Pause track.
"cmus-remote -u"
    Mod2+Mod4 + c

# Increase screen backlight.
"xbacklight -inc 10"
    XF86MonBrightnessUp

# Decrease screen backlight.
"xbacklight -dec 10"
    XF86MonBrightnessDown

# Toggle microphone.
"amixer set Capture toggle"
    XF86AudioMicMute

# Take snapshot.
"ksnapshot"
    Print
